<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<p>
	<%= f.label :title, :class => 'heading activator grey-text text-darken-4' %><br>
	<%= f.text_field :title %>
	</p>

	<p>
	<%= f.label :content, "Write your article here", :class => 'heading activator grey-text text-darken-4' %><br>
	<%= f.cktext_area :content %>
	</p>

	<p>
  		<%= f.label :Tags, :class => 'heading activator grey-text text-darken-4' %><br />
  		<%= f.text_field :tag_list %>
	</p>

	<%= f.submit nil, :class => 'waves-effect waves-light btn wow bounceInUp' %>
<% end %>